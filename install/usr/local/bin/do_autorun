#!/bin/sh

led_mode() {
  mode="$1"
  trigger=/sys/class/leds/led0/trigger
  [ -e $trigger ] && echo "$mode" > $trigger
}

find_script() {
  base_name="$1"

  for ext in "" .sh .txt; do
    script="$base_name$ext"

    if [ -e "$script" ]; then
        echo "$script"
        return
    fi
  done
}

autorunonce(){
  echo "searching for autorunonce script"
  script=$(find_script "$1/autorunonce")

  if [ -z "$script" ]; then
    return 1
  fi

  echo "running autorunonce script $script"
  led_mode timer
  bash "$script"
  newname="$(basename "$script" | sed -e 's/run/ran/')"
  newscript="$(dirname $script)/$newname"
  echo "moving autorunonce script: $script -> $newscript"
  mv -v "$script" "$newscript"
}

autorun(){
  echo "searching for autorun script"
  script=$(find_script "$1/autorun")

  if [ -z "$script" ]; then
    return 1
  fi

  echo "running autorun script $script"
  led_mode heartbeat
  sudo screen -dmS opk bash -c 'sudo '"$script"
}

start() {
  led_mode default-on
  echo "Starting script autorun"
  mkdir -p /data
  if [ -b /dev/sda1 ]
  then
    echo "usb stick"
    mountpoint -q /data || mount /dev/sda1 /data
    cd /data
    autorunonce /data || autorun /data
  else
    echo "no usb stick"
    cd /boot
    autorunonce /boot || autorun /boot
  fi
}

stop() {
  echo "Stopping script autorun"
  sudo screen -X -S "opk" quit
}


# Some things that run always
touch /var/lock/autorun

# Carry out specific functions when asked to by the system
case "$1" in
  start)
    start
    ;;
  stop)
    stop
    ;;
  *)
    echo "Usage: $0 {start|stop}"
    exit 1
    ;;
esac

exit 0
